{
  "name": "crossweb",

  "hostname": "localhost",
  "address": "127.0.0.1",
  "port": 8080,
  
  "pid": "project.pid",

  "filters": [ "FormFilter", "GuardFilter" ],
  
  "routes": {}, 
  
  "guard": {
    "authenticator": ""
  },
  
  "log": {
    "appenders": [ { "type": "file",
                     "filename": "crossweb.log",
                     "maxLogSize": 10485760,
                     "backups": 5,
                     "pollInterval": 15 },
                   { "type": "console" } ],
    "levels": {
      "console": "info",
      "crossweb": "info",
      
      "danger": "error"
    }
  }
  
}