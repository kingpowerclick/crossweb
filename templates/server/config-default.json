{
  "name": "crossweb",

  "hostname": "localhost",
  "address": "127.0.0.1",
  "port": 8080,
  
  "pid": "project.pid",

  "filters": [ "FormFilter", "GuardFilter" ],
  
  "routes": {
    "post:/authenticate": { "handler": "GuardHandler.authenticate" }
  }, 
  
  "guard": {
    "locations": {
      "index": "/index.html"
    },
    "users": {
      "admin@sample": { "password": "1password;", "roles": [ "role1" ] }
    },
    "encryption": {
      "method": "aes128",
      "key": "5F4DCC3B5AA765D61D8327DEB882CF99",
      "iv": "2B95990A9151374ABD8FF8C5A7A0FE08"
    }
  },
  
  "log": {
    "appenders": [ { "type": "file",
                     "filename": "crossweb.log",
                     "maxLogSize": 10485760,
                     "backups": 5,
                     "pollInterval": 15 },
                   { "type": "console" } ],
    "levels": {
      "console": "info",
      "crossweb": "info",
      
      "danger": "error"
    }
  }
  
}